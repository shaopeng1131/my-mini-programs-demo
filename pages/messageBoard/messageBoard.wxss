/* pages/messageBoard/messageBoard.wxss */
@import "../template/commentCell/commentCell.wxss";
.t20{
  margin-top: -20rpx;
}
.submit-btn{
  border-bottom:1px solid #e5e5e5;
}
.msg-box-content{
  padding:5px;
}
.p0{
  padding:1em 0 0 0;
}
.box-show{
  display: block;
}
.box-hide{
  display: none;
}
.msg-box{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.userinfo {
    margin-bottom: 20rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
}
.scrollview{
    height: 100%;
}
/*分隔线*/
.hotcomment,.newcomment{
    background: #FFF;
}
.divide_view{
    height: 20rpx;
    background-color: #f2f2f2;
}
.comment_text{
    display:block;
    height:68rpx;
    font-size:26rpx;
    color:#888888;
    line-height:68rpx;
    margin-left: 15rpx;
}
.leaveWordBar{
    position: fixed;
    top: 30rpx;
    right: 30rpx;
    z-index: 10;
}
.leaveWordIcon{
    width: 62rpx;
    height: 62rpx;
    border-radius: 31rpx;
    display: inline-block;
    vertical-align: middle;
}
